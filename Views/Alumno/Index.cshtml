@model List<Alumno>
@{

}

<h2>Listado de Alumnos</h2>


<a asp-action="Create" class="btn btn-primary">Agregar alumno</a>

<table class="table">
    <thead>
        <tr>
            <td>Nro Orden</td>
            <td>Nombre</td>
            <td>Apellido</td>
            <td>Documento</td>
            <td>Fecha de Nacimiento</td>
            <td>Domicilio</td>
            <td>Opciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Dni</td>
                <td>@item.FechaNacimiento</td>
                <td>@item.Domicilio</td>
                <td>
                    <a asp-action="Detail" asp-route-nombre="@item.Nombre" class="btn btn-primary">Detalle</a>
                    <a asp-action="Update" asp-route-nombre="@item.Nombre" class="btn btn-light">Modificar</a>
                    <form method="post">
                        <button class="btn btn-danger" asp-action="Delete" asp-route-nombre="@item.Nombre">Borrar</button>
                    </form>

                </td>
            </tr>

        }
    </tbody>



</table>